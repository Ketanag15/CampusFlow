{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Jwt": {
    "Issuer": "http://localhost", // Issuer for development (can be a localhost URL)
    "Audience": "api://campusflow", // Audience (you can keep this as a placeholder for your API)
    "SecretKey": "CampusFlowSecretKeyForDevelopmentCurrently" // Secret key (use a simple key for now)
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=CampusFlow;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=true"
  },
  "AllowedHosts": "*"
}
